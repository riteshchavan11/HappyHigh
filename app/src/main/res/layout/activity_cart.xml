<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_blur"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="app.happihigh.com.activity.activity.CartActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#00ffffff"
        android:elevation="10dp"
        android:layout_weight="0.01"
        android:id="@+id/restro_card_view">

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restro 1"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="25sp"
        android:singleLine="true"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"

        />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/restro_card_view"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.98"
        app:cardBackgroundColor="#30ffffff"
        android:elevation="10dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cart_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#5000ffff"
        android:layout_weight="0.01"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:elevation="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9000ffff"
            android:text="Proceed To Checkout"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/checkout"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
