<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.happihigh.com.activity.activity.LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        style="@style/MyCardViewStyle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/blur_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blur_back"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/facebook_login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_height"
                android:layout_weight="1"
                app:srcCompat="@drawable/fb_logo" />


            <ImageView
                android:id="@+id/google_login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/image_height"
                android:layout_weight="1"
                android:elevation="5dp"
                app:srcCompat="@drawable/google_logo" />
            <!--<com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:elevation="5dp" />-->




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/image_container"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/google_login1"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    android:background="@drawable/restaurant1" />

                <ImageView
                    android:id="@+id/google_login2"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    android:background="@drawable/restaurant2" />

                <ImageView
                    android:id="@+id/google_login3"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    android:background="@drawable/restaurant3" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/google_login11"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    android:background="@drawable/restaurant4" />

                <ImageView
                    android:id="@+id/google_login21"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    android:background="@drawable/restaurant5" />

                <ImageView
                    android:id="@+id/google_login32"
                    android:layout_width="@dimen/image_width"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="1"
                    android:background="@drawable/restaurant6" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:layout_weight="1"
                android:elevation="8dp"
                app:srcCompat="@drawable/rest_icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:text="HappiHigh" />

            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="italic"
                android:text="@string/slogan" />
        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
